{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Line chart showing graduation rates of university students with dynamic average completion rate annotation",
  "width": 300,
  "height": 300,
  "title": "Completion Rate Amongst University Students As a Percentage",
  "data": {
    "url": "uni_completion_rate_formatted.csv"
  },
  "layer": [
    {
      "params": [
        {
          "name": "selectedState",
          "select": {
            "type": "point",
            "fields": ["State"]
          },
          "bind": {
            "input": "select",
            "options": [
              "New South Wales",
              "Victoria",
              "Queensland",
              "South Australia",
              "Western Australia",
              "Tasmania",
              "Northern Territory",
              "Australian Capital Territory"
            ],
            "name": "State: "
          },
          "value": "Victoria"
        }
      ],
      "transform": [
        {
          "filter": {
            "param": "selectedState"
          }
        }
      ],
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Year_Range",
          "type": "ordinal",
          "title": "Year Range",
          "sort": [
            "2005-2013",
            "2006-2014",
            "2007-2015",
            "2008-2016",
            "2009-2017",
            "2010-2018",
            "2011-2019",
            "2012-2020",
            "2013-2021",
            "2014-2022",
            "2015-2023"
          ]
        },
        "y": {
          "field": "Completion_Rate",
          "type": "quantitative",
          "title": "Completion Rate (%)"
        },
        "color": {
          "field": "University",
          "type": "nominal",
          "legend": {"title": "University"}
        },
        "tooltip": [
          {"field": "University", "type": "nominal"},
          {"field": "Completion_Rate", "type": "quantitative"},
          {"field": "Year_Range", "type": "ordinal"}
        ]
      }
    },
    {
      "transform": [
        {
          "filter": {
            "param": "selectedState"
          }
        },
        {
          "aggregate": [
            {"op": "mean", "field": "Completion_Rate", "as": "AverageCompletionRate"}
          ]
        },
        {
          "calculate": "'Average completion rate: ' + format(datum.AverageCompletionRate, '.2f') + '%'",
          "as": "AverageCompletionRateText"
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5,
        "fontSize": 12,
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value": 0},
        "y": {"value": 260},
        "text": {"field": "AverageCompletionRateText"},
        "color": {"value": "green"}
      }
    }
  ]
}
